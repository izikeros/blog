{
  "extends": ["html-validate:recommended"],
  "rules": {
    "no-trailing-whitespace": "off",
    "void-style": "off",
    "attr-quotes": "off",
    "no-inline-style": "off",
    "no-raw-characters": "off",
    "unrecognized-char-ref": "off",
    "require-sri": "off",
    "script-type": "off",
    "element-permitted-content": "off",
    "no-deprecated-attr": "warn",
    "no-implicit-button-type": "warn",
    "valid-id": "warn",
    "wcag/h30": "off",
    "wcag/h32": "off",
    "wcag/h36": "off",
    "wcag/h37": "off",
    "wcag/h67": "off",
    "wcag/h71": "off",
    "prefer-native-element": "off",
    "long-title": "off",
    "no-redundant-for": "off"
  }
}
